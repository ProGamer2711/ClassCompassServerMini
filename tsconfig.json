{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"incremental": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": false,
		"strict": true,
		"strictPropertyInitialization": false,
		"paths": {
			"@resources/*": [
				"src/resources/*"
			],
			"@decorators": [
				"src/shared/decorators"
			],
			"@decorators/*": [
				"src/shared/decorators/*"
			],
			"@shared/*": [
				"src/shared/*"
			],
			"@prisma/*": [
				"src/prisma/*"
			]
		}
	}
}