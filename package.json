{
	"name": "class-compass-server",
	"version": "1.0.0",
	"description": "",
	"author": "Alexander Shestakov",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "bun ./src/main.ts",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "bun --inspect-brk -r tsconfig-paths/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^10.4.15",
		"@nestjs/config": "^4.0.0",
		"@nestjs/core": "^10.4.15",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^10.4.15",
		"@nestjs/swagger": "^8.1.1",
		"@prisma/client": "^6.4.1",
		"bcryptjs": "^3.0.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cookie-parser": "^1.4.7",
		"date-fns": "^4.1.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"swagger-themes": "^1.4.3"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/eslintrc": "^3.3.0",
		"@nestjs/cli": "^10.4.9",
		"@nestjs/schematics": "^10.2.3",
		"@nestjs/testing": "^10.4.15",
		"@types/cookie-parser": "^1.4.8",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^20.17.19",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.25.0",
		"@typescript-eslint/parser": "^8.25.0",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-import-resolver-typescript": "^3.8.3",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.3",
		"jest": "^29.7.0",
		"prettier": "^3.5.2",
		"prisma": "^6.4.1",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.6",
		"typescript": "^5.7.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "bun"
	}
}
